{% extends 'base.html.twig' %}

{% block title %}Hello TopicController!{% endblock %}

{% block body %}
    <p>
        <a href="{{ path('topic_new') }}">Cr√©er un topic</a>
    </p>

    {% for topic in topics %}
        <p>
            {{ topic.name }}<br>
            {{ topic.createdAt | date('d/m/Y H:i') }}<br>
        </p>

        <h3>Tags</h3>

        <ul>
            {% for tag in topic.tags %}
                <li>{{ tag.text }}</li>
            {% endfor %}
        </ul>

        <h3>Message</h3>
        {% for message in topic.messages %}
            <p>
                {{ message.description }}<br>
                {{ message.createdAt | date('d/m/Y H:i') }}
            </p>
        {% endfor %}
    {% endfor %}
{% endblock %}
